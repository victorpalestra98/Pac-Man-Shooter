  text("Bem Vindo ao Pac-Man Shooter",5,250);
  textSize(25);
  text("Pressione ENTER para comeÃ§ar",35,300);
  if (keyIsDown(ENTER) ){
       tela = 2;  
    } 
  }
  
if( tela == 2 ){
  
  background(0);
 
if( vidas >= 1 ){  
if( nivel <= 5 + continuar ){  
  
  for ( i = 0; i < cenario.length; i++ ) { 
    for ( j = 0; j < cenario[0].length; j++ ) {  
      if ( cenario[i][j] == '#' ) {
        //image(imgParede,j*tamBloco,i*tamBloco); 
