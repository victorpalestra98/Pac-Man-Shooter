function pacMan(posPacX, posPacY) {
  if(vidas == 3 || vidas == 4 ){
  	stroke(250,250,5); 
  	strokeWeight(3); 
  	fill(230,230,0);
  	arc(posPacX+2, posPacY+2, tamBloco -6, tamBloco-6, PI/6,TWO_PI - PI/6, PIE);
  	strokeWeight(1); 
  	fill(0,0,0);
  	ellipse(posPacX,posPacY-(tamBloco)/5,tamBloco/6, tamBloco/6);
                 }
  
  if( vidas >=5 ){
  	stroke(250,250,5); 
  	strokeWeight(3); 
  	fill(5,50,250);
  	arc(posPacX+2, posPacY+2, tamBloco -6, tamBloco-6, PI/6,TWO_PI - PI/6, PIE);
  	strokeWeight(1); 
  	fill(0,0,0);
  	ellipse(posPacX,posPacY-(tamBloco)/5,tamBloco/6, tamBloco/6);
  		}
  
  if( vidas <= 2 ){
  	stroke(250,250,5); 
  	strokeWeight(3); 
  	fill(250,120,10);
  	arc(posPacX+2, posPacY+2, tamBloco -6, tamBloco-6, PI/6,TWO_PI - PI/6, PIE);
  	strokeWeight(1); 
  	fill(0,0,0);
  	ellipse(posPacX,posPacY-(tamBloco)/5,tamBloco/6, tamBloco/6);
		}
} 

function colisao(px, py) {
  posColuna = Math.floor( px / tamBloco ); 
  posLinha = Math.floor( py / tamBloco );
  if ( cenario[posLinha][posColuna] == '#' ) {
     return true;     
  }
  else {
     return false;  
  }
  
}

function setup() {
 createCanvas(440,510);
 x = 60; 
 y = 60;
}


function draw() {
  
